{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build project",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "type": "shell",
            "command": "/usr/bin/make",
            "args": [
                "GCC_PATH=/usr/local/bin",
                "-j6"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Compile current file",
            "type": "shell",
            "command": "/usr/local/bin/arm-none-eabi-gcc",
            "args": [
                "-c",
                "-DUSE_HAL_DRIVER",
                "-DSTM32L072xx",
                "-IDrivers/board/inc",
                "-IDrivers/module/Inc",
                "-IInc",
                "-IDrivers/STM32L0xx_HAL_Driver/Inc",
                "-IDrivers/STM32L0xx_HAL_Driver/Inc/Legacy",
                "-IMiddlewares/ST/STM32_USB_Device_Library/Core/Inc",
                "-IMiddlewares/ST/STM32_USB_Device_Library/Class/CDC/Inc",
                "-IDrivers/CMSIS/Device/ST/STM32L0xx/Include",
                "-IDrivers/CMSIS/Include",
                "-IDrivers/CMSIS/Include",
                "-mcpu=cortex-m0plus",
                "-mthumb",
                "-DUSE_HAL_DRIVER",
                "-DSTM32L072xx",
                "-IDrivers/board/inc",
                "-IDrivers/module/Inc",
                "-IInc",
                "-IDrivers/STM32L0xx_HAL_Driver/Inc",
                "-IDrivers/STM32L0xx_HAL_Driver/Inc/Legacy",
                "-IMiddlewares/ST/STM32_USB_Device_Library/Core/Inc",
                "-IMiddlewares/ST/STM32_USB_Device_Library/Class/CDC/Inc",
                "-IDrivers/CMSIS/Device/ST/STM32L0xx/Include",
                "-IDrivers/CMSIS/Include",
                "-IDrivers/CMSIS/Include",
                "-O2",
                "-Wall",
                "-fdata-sections",
                "-ffunction-sections",
                "-g",
                "-gdwarf-2",
                "-MMD",
                "-MP",
                "-MF'build/${fileBasenameNoExtension}.d'",
                "'${relativeFile}'",
                "-o",
                "'build/${fileBasenameNoExtension}.o'"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            },
            "presentation": {
                "focus": true
            }
        },
        {
            "label": "Delete build folder",
            "type": "shell",
            "command": "/usr/bin/make",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "presentation": {
                "focus": false
            }
        },
        {
            "label": "CPU: Build, Download and run",
            "type": "shell",
            "command": "/usr/bin/openocd",
            "args": [
                "-f",
                "/usr/share/openocd/scripts/interface/stlink-v2.cfg",
                "-f",
                ".vscode/stm32l0.cfg",
                "-c",
                "program build/term_code_git.elf verify reset exit"
            ],
            "problemMatcher": [],
            "dependsOn": "Build project"
        },
        {
            "label": "CPU: Download and run",
            "type": "shell",
            "command": "/usr/bin/openocd",
            "args": [
                "-f",
                "/usr/share/openocd/scripts/interface/stlink-v2.cfg",
                "-f",
                ".vscode/stm32l0.cfg",
                "-c",
                "program build/term_code_git.elf verify reset exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Reset and run",
            "type": "shell",
            "command": "/usr/bin/openocd",
            "args": [
                "-f",
                "/usr/share/openocd/scripts/interface/stlink-v2.cfg",
                "-f",
                ".vscode/stm32l0.cfg",
                "-c init",
                "-c reset",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Halt",
            "type": "shell",
            "command": "/usr/bin/openocd",
            "args": [
                "-f",
                "/usr/share/openocd/scripts/interface/stlink-v2.cfg",
                "-f",
                ".vscode/stm32l0.cfg",
                "-c init",
                "-c halt",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "CPU: Run",
            "type": "shell",
            "command": "/usr/bin/openocd",
            "args": [
                "-f",
                "/usr/share/openocd/scripts/interface/stlink-v2.cfg",
                "-f",
                ".vscode/stm32l0.cfg",
                "-c init",
                "-c resume",
                "-c exit"
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Python file",
            "type": "shell",
            "command": "python3",
            "args": [
                "${file}"
            ],
            "presentation": {
                "focus": true
            },
            "problemMatcher": []
        },
        {
            "label": "Open CubeMX project",
            "type": "shell",
            "command": "xdg-open",
            "args": [
                "term_code_git.ioc"
            ],
            "presentation": {
                "focus": false
            },
            "problemMatcher": []
        },
        {
            "label": "Update workspace",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/ideScripts/update.py"
            ],
            "presentation": {
                "focus": true
            },
            "problemMatcher": []
        }
    ]
}